<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="invoice_form" model="ir.ui.view">
        <field name="name">prepare_taxes_account.move</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='state']" position="before" >
                <button name="%(ce_invoice_import_wizard_action)d" string="IMPORT DE"
                        type="action" class="btn-primary"/>
            </xpath>
        </field>
    </record>

    <record id="invoice_supplier_form" model="ir.ui.view">
        <field name="name">prepare_taxes_account.move supplier form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.move_supplier_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='state']" position="before" >
                <button name="%(ce_invoice_import_wizard_action)d" string="IMPORT DE"
                        type="action" class="btn-primary"/>
            </xpath>
        </field>
    </record>
</odoo>
